        <!-- Table for Menu Items -->
        <TableView fx:id="table" layoutX="20.0" layoutY="80.0" prefHeight="200.0" prefWidth="295.0" style="-fx-border-color: #c99789;">
            <columns>
                <TableColumn fx:id="item" prefWidth="67.33331298828125" text="item" />
                <TableColumn fx:id="price" prefWidth="62.0" text="Price" />
                <TableColumn fx:id="category" prefWidth="75.33331298828125" text="Category" />
                <TableColumn fx:id="availability" prefWidth="86.66668701171875" text="Availability" />
            </columns>
        </TableView>

        <!-- Item Name TextField -->
        <Text fill="#7d390e" layoutX="20.0" layoutY="300.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Item Name:" />
        <TextField layoutX="100.0" layoutY="285.0" prefWidth="215.0" />

        <!-- Quantity Spinner -->
        <Text fill="#7d390e" layoutX="20.0" layoutY="330.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Quantity:" />
        <Spinner layoutX="100.0" layoutY="315.0" prefWidth="70.0" />

        <!-- Back Button -->
        <Button layoutX="122.0" layoutY="461.0" mnemonicParsing="false" onAction="#switchto_back" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #c99789; -fx-background-radius: 20; -fx-font-family: 'Britannic Bold'; -fx-font-size: 13;" text="Back" textFill="#7d390e" />
    </children>
</AnchorPane>
