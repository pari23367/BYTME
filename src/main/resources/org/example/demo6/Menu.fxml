            <DropShadow />
         </effect></Button>

        <!-- Back Button -->
        <Button layoutX="122.0" layoutY="526.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #c99789; -fx-background-radius: 20; -fx-font-family: 'Britannic Bold'; -fx-font-size: 13;" text="Back" textFill="#7d390e">
         <effect>
            <DropShadow />
         </effect></Button>
    </children>
