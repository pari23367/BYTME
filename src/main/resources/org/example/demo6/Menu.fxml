        <!-- Table for Menu Items -->
        <TableView layoutX="20.0" layoutY="80.0" prefHeight="200.0" prefWidth="291.0" style="-fx-border-color: #c99789;">
            <columns>
                <TableColumn prefWidth="66.66668701171875" text="Name" />
                <TableColumn prefWidth="60.66668701171875" text="Price" />
                <TableColumn prefWidth="73.99993896484375" text="Category" />
                <TableColumn prefWidth="89.3333740234375" text="Availability" />
            </columns>
        </TableView>

        <!-- Item Name TextField -->
        <Text fill="#7d390e" layoutX="20.0" layoutY="300.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Item Name:">
         <font>
            <Font name="Britannic Bold" size="13.0" />
