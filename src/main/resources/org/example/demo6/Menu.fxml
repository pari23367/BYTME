        <TextField layoutX="100.0" layoutY="285.0" prefWidth="215.0" />

        <!-- Quantity Spinner -->
        <Text fill="#7d390e" layoutX="20.0" layoutY="330.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Quantity:">
         <font>
            <Font name="Britannic Bold" size="13.0" />
